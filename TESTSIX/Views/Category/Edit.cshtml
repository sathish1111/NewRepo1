@model Category
@{
    ViewData["Title"] = "Edit";
}
<form method="post" >
    <div class="border p-3 mt-4" >
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Category </h2>
            <hr />
        </div>
        <div asp-validation-summary=All ></div>

        <div class="row ps-3 mb-3 pe-2">
            <label asp-for="Name" ></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <div class="row ps-3 mb-3 pe-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px;height:40px">Update</button>
        <a class="btn btn-info " asp-controller="Category" asp-action="Index" style="width:150px;height:40px"> Goto Category </a>
    </div>


</form>


@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial"></partial>
    }
}


