@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Index";
}

<partial name="_notifications"></partial>

<div class="container p-3">
    <div class="row pt-4">

<div class="col-6">
  <h2 class="text-primary">Category List</h2>
</div>

   <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-clipboard-plus"></i>    Create New Catogory</a>
            
    </div>

    </div>

    </br>

<div>
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
                <th>CategoryName</th>
                <th>CategoryID</th>
                    <th>DisplayOrder</th>
                    <th></th>
        </tr>       
    </thead>
    <tbody>

    @foreach(var i in Model)
        {
     <tr>
                     <td width="60%">
                         @i.Name 
                     </td>
                    <td width="10%">
                        @i.Id
                    </td>
                        <td width="10%">
                            @i.DisplayOrder
                        </td>

                        <td width="10%">
                            <div class="w-100 btn-group" >
                                <a asp-asp-controller="Category" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary "> <i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger "> <i class="bi bi-pencil-square"></i>Delete</a>
                            
                            </div>
                            

                        </td>
     </tr>       

        }
        </tbody>


</table>

</div>

</div>

